<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <style name="PicPayTextInputField">
        <item name="backgroundTint">@color/PicPayHint</item>
        <item name="android:textColorHint">@color/PicPayHint</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="android:textColor">@color/white</item><item name="strokeColor">@color/PicPayHint</item>
    </style>
    <style name="PicPayTextEditField">
        <item name="backgroundTint">@color/PicPayGreen</item>
        <item name="android:colorBackground">@color/PicPayGreen</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="PicPayBackButton">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:src">@drawable/ic_arrow_back_ios_24px</item>
        <item name="backgroundTint">@color/PicPayBackground</item>
    </style>

</resources>