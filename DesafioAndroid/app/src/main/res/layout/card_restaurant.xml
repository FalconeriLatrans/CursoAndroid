<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mc_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/mc_RestImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:src="@drawable/frango_frito"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:contentDescription="Sei lá" />
        <TextView
            android:id="@+id/mc_RestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/mc_title"
            android:layout_marginStart="@dimen/mc_textstartmargin"
            tools:text="Tony Roma's"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/mc_RestAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mc_details"
            android:layout_marginStart="@dimen/mc_textstartmargin"
            tools:text="Av. Lavandisca, 717 - Indianópolis, São Paulo"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/mc_RestHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mc_textstartmargin"
            android:textColor="@color/mc_details"
            android:layout_marginBottom="10dp"
            tools:text="Fecha às 22:00"
            android:textSize="14sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>