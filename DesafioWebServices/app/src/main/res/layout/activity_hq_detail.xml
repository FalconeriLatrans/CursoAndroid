<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/marvelblack"
    android:orientation="vertical"
    tools:context=".view.HqDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/hqDetail_background"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="start"
                    android:src="@drawable/hd_background"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/marvelblack"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/hqDetail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textSize="30sp"
                        android:text="kghjidfouj"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/hqDetail_description"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="kghjidfouj"
                        android:textColor="@color/white" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Published: "
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/hqDetail_published"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kghjidfouj"
                            android:textStyle="normal"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                  <TextView
                      android:id="@+id/hqDetail_price"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="normal"
                      android:text="kghjidfouj"
                      android:textColor="@color/white" />
                    </LinearLayout>
                                        <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pages: "
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                  <TextView
                      android:id="@+id/hqDetail_pages"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="normal"
                      android:text="kghjidfouj"
                      android:textColor="@color/white" />
                                        </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:alpha="0.2"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="@color/black"
                android:rotationY="12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/hqDetail_backbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                  style="@style/hq_compacted"
                  android:background="@color/white">
                    <ImageView
                        android:id="@+id/hqDetail_image"
                        android:adjustViewBounds="true"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="165dp"
                        android:src="@drawable/amz_spider_man"
                        android:background="@color/white"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>