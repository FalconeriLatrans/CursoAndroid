<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lg_textInput">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/theme_green</item>
        <item name="hintTextColor">@color/theme_gray</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/theme_gray</item>
   </style>
    <style name="button_std">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/theme_red</item>
    </style>
    <style name="button_simple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:outlineSpotShadowColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="hq_expanded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="hq_compacted">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>
</resources>